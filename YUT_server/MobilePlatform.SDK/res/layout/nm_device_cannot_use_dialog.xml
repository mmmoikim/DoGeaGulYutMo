<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dialog_shadow" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:text="@string/nm_device_cannot_user_desc"
        android:textColor="#867f7c"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >
        
        <Button
            android:id="@+id/dialog_negativebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_no_drawable"
            android:text="@string/nm_cancel"
            android:textSize="14sp"
            android:textColor="@android:color/white" />
        
        <Button
            android:id="@+id/dialog_positivebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_yes_drawable"
            android:text="@string/nm_sign_login"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>
